<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.advancelevel.AdvanceFragment">


    <TextView
        android:id="@+id/instructionTxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Continue to
                      french with
          advance course"
        android:textColor="#0B4CEF"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:adjustViewBounds="true"
        android:src="@drawable/flogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toEndOf="@id/instructionTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgComplex"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/instructionTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/blueimages"
        />

    <Button
        android:id="@+id/btnComplex"
        android:layout_width="290dp"
        android:layout_height="67dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="43dp"
        android:background="#0B4CEF"
        android:text="Complex"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imgComplex"
        app:layout_constraintTop_toBottomOf="@id/instructionTxt" />

    <ImageView
        android:id="@+id/imgConversation"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/imgComplex"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/blueimages"
        />

    <Button
        android:id="@+id/btnConversation"
        android:layout_width="290dp"
        android:layout_height="67dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="42dp"
        android:background="#0B4CEF"
        android:text="Conversation"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imgConversation"
        app:layout_constraintTop_toBottomOf="@id/btnComplex" />

    <Button
        android:id="@+id/Quiz"
        android:layout_width="175dp"
        android:layout_height="66dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="43dp"
        android:backgroundTint="#3F8807"
        android:text="Quiz"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgConversation"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>