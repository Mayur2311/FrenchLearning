<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".advance_complex_words">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0B4CEF"
        android:fontFamily="sans-serif"
        android:paddingLeft="25dp"
        android:text="@string/advanceLevel"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/blueimages"
        />

    <TextView
        android:id="@+id/topicTv"
        android:layout_width="290dp"
        android:layout_height="69dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="4dp"
        android:background="#0B4CEF"
        android:text="Complex Words"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />

    <GridLayout
        android:id="@+id/complex_gridview"
        android:layout_width="368dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:layout_marginTop="40dp"
        android:columnCount="3"
        android:rowCount="10">

        <Button
            android:id="@+id/button1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="ŒIL" />
        <TextView
            android:id="@+id/text1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:paddingTop="20dp"
            android:paddingLeft="35dp"
            android:layout_marginLeft="04dp"
            android:layout_marginRight="04dp"
            android:text="EYE" />
        <Button
            android:id="@+id/button1.1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="eye"
            android:text="PLAY" />


        <Button
            android:id="@+id/button2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="ÉCUREUIL" />
        <TextView
            android:id="@+id/text2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:paddingTop="17dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="04dp"
            android:layout_marginRight="04dp"
            android:text="SQUIRREL" />
        <Button
            android:id="@+id/button2.1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="squirrel"
            android:text="PLAY" />


        <Button
            android:id="@+id/button3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="FEUILLE" />
        <TextView
            android:id="@+id/text3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:paddingTop="17dp"
            android:paddingLeft="36dp"
            android:layout_marginLeft="04dp"
            android:layout_marginRight="04dp"
            android:text="LEAF" />
        <Button
            android:id="@+id/button3.1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="leaf"
            android:text="PLAY" />


        <Button
            android:id="@+id/button4"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="ACCUEILLIR" />
        <TextView
            android:id="@+id/text4"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:paddingTop="18dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="04dp"
            android:layout_marginRight="04dp"
            android:text="TO WELCOME" />
        <Button
            android:id="@+id/button4.1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="towelcome"
            android:text="PLAY" />


        <Button
            android:id="@+id/button5"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="PORTEFEUILLE " />
        <TextView
            android:id="@+id/text5"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:paddingTop="17dp"
            android:paddingLeft="27dp"
            android:layout_marginLeft="04dp"
            android:layout_marginRight="04dp"
            android:text="WALLET" />
        <Button
            android:id="@+id/button5.1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="wallet"
            android:text="PLAY" />


        <Button
            android:id="@+id/button6"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="ŒUF" />
        <TextView
            android:id="@+id/text6"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:paddingTop="19dp"
            android:paddingLeft="38dp"
            android:layout_marginLeft="04dp"
            android:layout_marginRight="04dp"
            android:text="EGG" />
        <Button
            android:id="@+id/button6.1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="egg"
            android:text="PLAY" />


        <Button
            android:id="@+id/button7"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="CŒUR" />
        <TextView
            android:id="@+id/text7"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:paddingTop="18dp"
            android:paddingLeft="32dp"
            android:layout_marginLeft="04dp"
            android:layout_marginRight="04dp"
            android:text="HEART" />
        <Button
            android:id="@+id/button7.1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="heart"
            android:text="PLAY" />


        <Button
            android:id="@+id/button8"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:text="DERNIER" />
        <TextView
            android:id="@+id/text8"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:paddingTop="18dp"
            android:paddingLeft="35dp"
            android:layout_marginLeft="04dp"
            android:layout_marginRight="04dp"
            android:text="LAST" />
        <Button
            android:id="@+id/button8.1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="last"
            android:text="PLAY" />


    </GridLayout>

    <Button
        android:id="@+id/prevButton"
        android:layout_width="136dp"
        android:layout_height="45dp"
        android:background="@color/white"
        android:text="Prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/homeButton"
        app:layout_constraintHorizontal_bias="1.0"
        />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="136dp"
        android:layout_height="45dp"
        android:background="@color/white"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/prevButton"
        app:layout_constraintEnd_toStartOf="@id/nextButton"
        app:layout_constraintHorizontal_bias="1.0"
        />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="136dp"
        android:layout_height="45dp"
        android:background="@color/white"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>