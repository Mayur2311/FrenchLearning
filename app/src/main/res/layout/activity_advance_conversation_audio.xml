        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/audio_text_5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
