<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".advance_conversation_audio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0B4CEF"
        android:text="Advance Level"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:gravity="center" />
    <LinearLayout
        android:id="@+id/firstllayout"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/blueimages" />

        <TextView
            android:id="@+id/topictv"
            android:layout_width="300dp"
            android:layout_height="69dp"
            android:background="#0B4CEF"
            android:text="Conversation Audio"
            android:paddingTop="15dp"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_weight="1.45"
            android:gravity="right"
            tools:ignore="RtlCompat" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/audio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Let's listen some French conversation, so it will help to increase listening ability."
                android:textSize="18sp"
                android:textColor="@color/teal_700"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/audio_text_heading"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Conversion Title"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/teal_700"
                />
            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Audio"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/audio_text_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Where to go to have dinner"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />

            <Button
                android:id="@+id/audio_btn_1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginRight="05dp"
                android:onClick="play1"
                android:text="PLAY" />

            <Button
                android:id="@+id/audio_btn_1.1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:onClick="pause1"
                android:text="PAUSE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/audio_text_2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="You have to go out from \ntime to time"
                android:textSize="17sp"
                android:textColor="@color/teal_700"
                />

            <Button
                android:id="@+id/audio_btn_2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginRight="05dp"
                android:text="PLAY"
                android:onClick="play2"/>
            <Button
                android:id="@+id/audio_btn_2.1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="PAUSE"
